block vars
  - title = 'Site';
  - bodyClass = '';

block mixins
  include ../mixins/menu
  include ../mixins/slider
  include ../blocks/header/header-top
  include ../blocks/header/header-middle
  include ../blocks/header/header-mobile
  include ../components/heading
  include ../components/breadcrumb
  include ../components/modal
  include ../components/product
  include ../components/post
  include ../components/testimonial
  include ../components/carousel

block includes
  include ../constants/menu
  include ../constants/slider
  include ../constants/posts
  include ../constants/products
  include ../constants/testimonial

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title= title
    meta(name="description", content="")
    meta(name="keywords", content="")
    meta(name="robots", content="index, follow")
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1, maximum-scale=1.0"
    )
    link(
      rel="icon",
      href="favicon-16x16.png",
      type="image/x-icon",
      sizes="16x16"
    )
    link(
      rel="stylesheet",
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    )
    link(rel="stylesheet", href="styles/reset.css")
    link(rel="stylesheet", href="styles/fontawesome.css")
    link(rel="stylesheet", href="styles/styles.css")
  body(class=bodyClass)
    block header
      include ../partials/header-with-slider.pug
    block main
    block footer
      include ../partials/footer.pug
    block script
      include ../blocks/script
