    ]

block append mixins
  include ../components/breadcrumb
  include ../components/heading
  include ../components/product
  include ../components/banner
  include ../components/pagination
  include ../components/tab
  include ../components/category
  include ../blocks/product-list/tag

block append includes
  include ../constants/products
  include ../constants/tag
  include ../constants/category

block main
  main.product-list
    .container
      +breadcrumb(breadcrumbData)
      +bannerHorizontal(bannerHorizontalProductList)
      .row
        .col-lg-9.order-lg-2
          .product-list__content
            +tabProductList
        .col-lg-3
          .product-list__sidebar
            .product-list__categories
              +title("Danh mục sản phẩm")
              +categoriesDefault(categories)
            .product-list__compare
              +title("So sánh sản phẩm")
              p Bạn chưa có bất kỳ sản phẩm nào để so sánh
            +tagProduct(tagProduct)
            +bannerVetical(bannerVeticalProductList)
