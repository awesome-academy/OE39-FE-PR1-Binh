      {
        href: "#", 
        anchor: "Trang chủ"
      },
      {
        href: "#", 
        anchor: "Sản phẩm"
      },
      {
        href: "#", 
        anchor: "Rượu vang đỏ"
      }
    ]
  -
    const bannerData = {
        image: "../images/banner-1.png",
        title: "Rượu",
        desc: "1987"
      }
  -
    const bannerVeticalProductList = {
        imageUrl: "../images/product-list-banner-2.png",
        bigText: "Đỏ",
        mediumText: "Rượu vang",
        smallText: "1980"
      }
  -
    const bannerHorizontalProductList = "../images/product-list-banner-1.png"
  -
    const pagination = [
      {
        href: "#",
        page: 1
      },
      {
        href: "#",
